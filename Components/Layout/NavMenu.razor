@inject LanguagesManager Language
@inject NavItems NavItems

<nav>
    <div class="nav-logo">
        <a href="" @onclick='() => { NavItems.deactivateAll(); NavItems.First().Active = true; }'><img src="favicon.png" alt="Logo" /></a>
    </div>
    <input name="Navigation menu" type="checkbox" class="navbar-toggler" @bind="isToggler" />
    <div class="nav-menu@(isToggler ? " nav-show" : null)">
        @foreach (NavItem item in NavItems) {
            <a class="my-nav-item @(item.Active ? "active" : null)" href=@item.href @onclick='() => { NavItems.deactivateAll(); item.Active = true; isToggler = false; }'>@GetValueByKey(item.Name)</a>
        }
        <Dropdown T="string" Options="availableLanguages.Select(x => (x, x)).ToList()" OnSelected="ChangeLanguage" />
    </div>    
</nav>