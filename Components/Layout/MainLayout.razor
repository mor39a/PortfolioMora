@inherits LayoutComponentBase
@inject LanguagesManager Language
@inject IJSRuntime jsRuntime

<div class="page">
    <main>
        <nav style="position: fixed; width: 100%; z-index: 10;">
            <NavMenu />
        </nav>

        <article id="main-container" class="content px-4" style="padding: 60px; min-height: calc(100vh - 100px);">
            @Body
        </article>

        <footer id="footer" style="width: 100%;">
            <FooterLayout />
        </footer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            await Language.GetBrowserLanguage(jsRuntime);
            await jsRuntime.InvokeVoidAsync("initializeContainerHeight");
        }
        await base.OnAfterRenderAsync(firstRender);
    }
}
